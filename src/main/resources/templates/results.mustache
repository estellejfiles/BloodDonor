{{>header}}

<!-- container to store results in; uses result-container styles-->
<div id="result-container">
    <h2>Results</h2>

    <p>Thanks for your interest in donating blood, {{donor.firstName}}</p>

    <h3>Your Data</h3>

    <p>Age: {{donor.age}}</p>
    <p>Weight: {{donor.weight}}</p>

    <h3>Your Results</h3>

    <p>{{ resultMessage }}</p>

<!--    display ineligible reasons, if there are any    -->
<!--    can act both as if statement and a loop    -->
    <ul>
    {{#ineligibleReasons}}
        <li>{{.}}</li>
    {{/ineligibleReasons}}
    </ul>

<!--    if there are no ineligible reasons then the user is eligible   -->
<!--    "^" indicates this executes if NOT -->
    {{^ineligibleReasons}}
    <a href="https://www.mbc.org/donate-blood/donor-eligibility/">Continue checking eligibility</a>
    {{/ineligibleReasons}}
</div>

<!-- stores code that will have navigation styles -->
<div id="navigation">
    <a href="/">Return to the home page</a>
</div>

{{>footer}}